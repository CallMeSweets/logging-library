//PUT _index_template/application-logs
{
  "index_patterns": ["logging-*"],
  "template": {
    "settings": {
      "number_of_shards": 1
    },
    "mappings": {
      "properties": {
        "message": {
          "type": "text"
        },
        "priority": {
          "type": "keyword"
        },
        "timestamp": {
          "type": "text"
        },
        "args": {
          "type": "text"
        }
      }
    }
  }
}